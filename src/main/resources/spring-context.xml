<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.spring.abstractbeandefinition.*"/>

    <bean id="person" class="com.spring.abstractbeandefinition.abstract1.Person" abstract="true">
        <property name="name" value="zhangsan"></property>
    </bean>

    <bean id="student" class="com.spring.abstractbeandefinition.abstract1.Student" parent="person" autowire="byType" init-method="init"></bean>

    <bean id="auto" class="com.spring.abstractbeandefinition.factorybean.MyFactoryBean"></bean>
</beans>